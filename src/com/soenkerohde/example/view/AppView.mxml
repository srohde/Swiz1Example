<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 currentState="login" xmlns:view="com.soenkerohde.example.view.*">

	<fx:Script>
		<![CDATA[
			import com.soenkerohde.example.model.AppModel;
			
			import mx.collections.ArrayCollection;
			
			
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="login" />
		<s:State name="chart" />
	</s:states>
	
	<s:layout>
		<s:BasicLayout/>
	</s:layout>

	<s:ButtonBar top="10" left="10" dataProvider="{new ArrayCollection(['login', 'chart'])}" requireSelection="true"
			 change="currentState = event.currentTarget.dataProvider[event.newIndex]"/>
	
	<view:LoginView includeIn="login" horizontalCenter="0" verticalCenter="0" />
	<view:ChartView includeIn="chart" top="50" left="10" right="10" bottom="40" />

</s:Group>
