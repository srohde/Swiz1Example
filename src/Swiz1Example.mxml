<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication width="800" height="600" xmlns:fx="http://ns.adobe.com/mxml/2009"
					   xmlns:s="library://ns.adobe.com/flex/spark"
					   xmlns:mx="library://ns.adobe.com/flex/halo"
					   xmlns:swiz="http://swiz.swizframework.org"
					   xmlns:processor="com.soenkerohde.example.processor.*"
						xmlns:model="com.soenkerohde.example.model.*"
						xmlns:ctrl="com.soenkerohde.example.ctrl.*"
					    xmlns:signal="com.soenkerohde.example.signal.*"
					xmlns:processors="com.foomonger.swizframework.processors.*"
					xmlns:business="com.soenkerohde.example.business.*">
	
	<fx:Declarations>

		<s:TraceTarget includeCategory="true" includeLevel="true" includeTime="true" />
		
		<swiz:Swiz>
			<swiz:config>
				<swiz:SwizConfig eventPackages="com.soenkerohde.example.event.*"
								 viewPackages="com.soenkerohde.example.view.*" />
			</swiz:config>
			<swiz:BeanProvider>
				<model:AppModel />
				<ctrl:AppController />
				
				<!-- Login related beans -->
				<ctrl:LoginController />
				<business:LoginDelegate />
				<signal:LoginSignal />
				
				<swiz:ServiceRequestUtil />
				<signal:TestSignal />
			</swiz:BeanProvider>
			<swiz:customProcessors>
				<processor:YahooFinanceProcessor />
				<processors:MediateSignalProcessor signalPackages="com.soenkerohde.example.signal.*" />
			</swiz:customProcessors>
		</swiz:Swiz>
		
	</fx:Declarations>

	<view:AppView left="10"
				   right="10"
				   top="10"
				   bottom="10"
				   xmlns:view="com.soenkerohde.example.view.*" />

</s:WindowedApplication>
